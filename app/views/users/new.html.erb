<%= render partial: 'layouts/box' %>
<%= render partial: 'layouts/button' %>
<%= render partial: 'layouts/centerframe' %>

<%= render partial: 'landing/subheader' %>
<div class="center">
  <div class="sectionheader">
  <h3>Register a New User </h3>
  </div>

  <%= form_with url: users_path, method: :post, local: :true do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label "E-mail:" %>
  <%= f.text_field :email %>
  <br><br>
  <%= f.submit "Create New User" %>
  <% end %>

</div>